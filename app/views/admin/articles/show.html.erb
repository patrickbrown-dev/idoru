<h1><%= @article.title %> <small><%= @article.url %></small></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>feed</th>
      <th>author</th>
      <th>published_at</th>
      <th>created_at</th>
      <th>updated_at</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @article.id %></td>
      <td><%= link_to @article.feed.title, admin_feed_path(@article.feed) %></td>
      <td><%= @article.author %></td>
      <td><%= @article.published_at %></td>
      <td><%= @article.created_at %></td>
      <td><%= @article.updated_at %></td>
    </tr>
  </tbody>
</table>

<h2>Content</h2>
<article>
  <%= @article.try(:summary).try(:html_safe) %>
  <%= @article.try(:body).try(:html_safe) %>
</article>
