<h1>Feeds</h1>

<%= link_to "New Feed", new_admin_feed_path, class: "btn btn-primary" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>url</th>
      <th>actions</th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.id %></td>
        <td><%= link_to feed.title, admin_feed_path(feed) %></td>
        <td><%= feed.url %></td>
        <td>
            <%= link_to fa_icon("edit"), edit_admin_feed_path(feed), class: "btn btn-xs btn-default" %>
            <%= link_to fa_icon("refresh"), refresh_admin_feed_path(feed), class: "btn btn-xs btn-success" %>
            <%= link_to fa_icon("times"), admin_feed_path(feed), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @feeds %>
