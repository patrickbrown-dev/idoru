<h1>Subscriptions</h1>

<%= link_to "New Subscription", new_admin_subscription_path, class: "btn btn-primary" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>created_at</th>
      <th>user</th>
      <th>feed</th>
      <th>actions</th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |sub| %>
      <tr>
        <td><%= sub.id %></td>
        <td><%= sub.created_at %></td>
        <td><%= sub.user.email %></td>
        <td><%= sub.feed.url %></td>
        <td>
          <%= link_to "edit", edit_admin_subscription_path(sub), class: "btn btn-xs btn-default" %>
          <%= link_to 'destroy', admin_subscription_path(sub), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
